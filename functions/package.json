{
  "name": "functions",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "start-emulator": "firebase emulators:start --only firestore,storage",
    "test": "npm run build && ts-mocha --recursive tests/index.ts",
    "coverage": "nyc npm run test",
    "test-ci": "npm run build && firebase emulators:exec --only firestore,storage \"npm run coverage > report.txt\""
  },
  "engines": {
    "node": "16"
  },
  "main": "out/index.js",
  "dependencies": {
    "dotenv": "^16.0.1",
    "firebase-admin": "^10.0.2",
    "firebase-functions": "^3.22.0",
    "firebase-functions-test": "^2.2.0",
    "lodash": "^4.17.21",
    "node-fetch": "^3.2.10",
    "node-input-validator": "^4.5.0",
    "request": "^2.88.2",
    "request-promise": "^4.2.6"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.3.0",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/request-promise": "^4.1.48",
    "@types/sinon": "^10.0.12",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "chai": "^4.3.6",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "sinon": "^14.0.0",
    "ts-mocha": "^10.0.0",
    "typescript": "^4.5.4"
  },
  "private": true
}
